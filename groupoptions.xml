<?xml version="1.0"?>
<!DOCTYPE data SYSTEM "http://www.woltlab.com/DTD/options.dtd">
<data>
	<import>
		<categories>
			<category name="credits"></category>
			<category name="credits.rights">
				<parent>credits</parent>
			</category>
			<category name="credits.transfer">
				<parent>credits</parent>
			</category>
			<category name="credits.moderation">
				<parent>credits</parent>
			</category>
		</categories>

		<options>
			<option name="credits.canuse">
				<categoryname>credits.rights</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="credits.transfer.canuse">
				<categoryname>credits.transfer</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="credits.transfer.canreceive">
				<categoryname>credits.transfer</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="credits.moderation.cantransfer">
				<categoryname>credits.moderation</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			<option name="credits.log.canuse">
				<categoryname>credits.rights</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
		</options>

	</import>
</data>
